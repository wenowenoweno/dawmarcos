<?php
$contador=0;
$binario=array();
while (count($binario)<20){
    $binario[]=decbin($contador); 
    $contador++;
}
echo"<table border=2px>
<tr><td>Indice</td><td>Binario</td><td>Octal</td></tr>";

$inverso=array_reverse($binario);
$x=count($inverso);
for($x;$x=0;$x--){
    $octal=decoct($x);
    echo"<tr><td>$x</td><td>$inverso[$x]</td><td>$octal</td></tr>";
}
?>
</BODY>
