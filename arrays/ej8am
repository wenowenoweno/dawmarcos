    <head><title>Ejercicio 8 </title><head>
<BODY>
<?php
  $matriz1=array (
        array(1,2,3),
        array(4,5,6),
        array(7,8,9)
  );
  $matriz2=array(
        array(10,11,12),
        array(13,14,15),
        array(16,17,18)
  );


echo"<h2>Matriz 1<h2><table border=2px>";
for($x=0;$x<=2;$x++){
    echo"<tr>";
        for($i=0;$i<=2;$i++){
            echo"<td>".$matriz1[$x][$i]."</td>";
        }
echo "</tr>";
}
echo"</table><br><br>";

echo"<h2>Matriz 2<h2><table border=2px>";
echo"<table border=2px>";
for($x=0;$x<=2;$x++){
    echo"<tr>";
        for($i=0;$i<=2;$i++){
            echo"<td>".$matriz2[$x][$i]."</td>";
        }
echo "</tr>";
}

echo"</table><br><br>";
echo"<h2>Suma matrices<h2><table border=2px>";
echo"<table border=2px>";
for($x=0;$x<=2;$x++){
    echo"<tr>";
        for($i=0;$i<=2;$i++){
            $suma=$matriz1[$x][$i]+$matriz2[$x][$i];
            echo"<td>$suma</td>";
        }
echo "</tr>";
}


echo"</table><br><br>";
echo"<h2>Producto matrices<h2><table border=2px>";
echo"<table border=2px>";
for($x=0;$x<=2;$x++){
    echo"<tr>";
        for($i=0;$i<=2;$i++){
            $prod=$matriz1[$x][$i]*$matriz2[$x][$i];
            echo"<td>$prod</td>";
        }
echo "</tr>";
}
echo "</table>";
 ?>

</BODY>
</HTML>
